version: '3.8'

services:
  # Servicio para la aplicación Node.js
  app:
    build: .  # Construir la imagen usando el Dockerfile
    container_name: app-consultorio-pediatrico
    restart: always
    ports:
      - "3000:3000"  # Mapear el puerto 3000 del contenedor al puerto 3000 del host
    environment:
      - DB_HOST=localhost
      - DB_PORT=5432
      - DB_NAME=consultorio-pediatrico
      - DB_USER=postgres
      - DB_PASSWORD=D3v310p34*DF5
    depends_on:
      - localhost
    volumes:
      - .:/usr/src/app  # Montar el código fuente en el contenedor
      - /usr/src/app/node_modules  # Evitar sobrescribir node_modules

  # Servicio para la base de datos PostgreSQL
  db:
    image: postgres:16.6-alpine3.21  # Usar la imagen oficial de PostgreSQL
    container_name: consultorio-pediatrico-db
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: consultorio-pediatrico
    ports:
      - "5432:5432"  # Mapear el puerto 5432 del contenedor al puerto 5432 del host
    volumes:
      - pgdata:/var/lib/postgresql/data  # Volumen para persistencia de datos

# Volumen para persistencia de la base de datos
volumes:
  pgdata: